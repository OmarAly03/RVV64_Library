CC = riscv64-unknown-linux-gnu-g++
FLAGS = -march=rv64gcv -static

# Include directories
INCLUDES = -Iinclude -I../lib

# Source files
SRCS = run_scatter.cpp src/scatter_elements_impl.cpp

# Output binary
TARGET = ./output_files/run_scatter

SIZE ?= 8
AXIS ?= 0

$(TARGET): $(SRCS)
	@$(CC) $(FLAGS) $(INCLUDES) -o $@ $^
	@python3 src/onnx_scatter_elements.py

run: $(TARGET)
	@qemu-riscv64 -cpu rv64,v=true $(TARGET) $(SIZE) $(AXIS)
	@python3 main.py $(SIZE) $(AXIS)

clean:
	rm -f output_files/*

.PHONY: run clean
